<%= form_with(model: [@schedule.branch, @schedule]) do |f| %>

  <div class="d-flex justify-content-center">
    <div>
      <%= render "shared/error_messages", resource: @schedule %>
      <div class="d-flex justify-content-center">
        <div class="card bg-danger " style="width: 20rem">
          <div class="card-body">
            <div class="field">
              <%= f.label :day %><br/>
              <%= f.text_field :day, class: "form-control" %>
            </div>
            <div class="field">
              <%= f.label :start_time %><br/>
              <%= f.time_field :start_time, class: "form-control" %>
            </div>
            <div class="field">
              <%= f.label :end_time %><br/>
              <%= f.time_field :end_time, class: "form-control" %>
            </div>
          </div>
          <div class="card bg-danger ">
            <div class="list-group list-group-flush d-flex">
              <%= f.submit "Confirmar", class: "list-group-item bg-danger" %>
              <%= link_to "Volver", branch_schedules_path(@branch), class: "list-group-item bg-danger", style: "text-align:center" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
