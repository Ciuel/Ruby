<p style="color: green"><%= notice %></p>

<h1 class="text-center m-4">Users</h1>
<div class="d-flex justify-content-center">
  <div>
    <%= link_to "Crear Usuario", new_user_path, class: "btn btn-secondary m-1" %>
  </div>
</div>
<div class="d-flex justify-content-center">
  <div id="users" class="d-flex flex-column m-4" style="width: 50rem">
    <% @users.each do |user| %>
      <div class="card mb-3 bg-danger text-white">
        <div class="row no-gutters">
          <div class="col-md-8">
            <div class="card-body">
              <%= render user %>
            </div>
          </div>
          <div class="col-md-4 d-flex align-items-center justify-content-center">
            <div class="d-flex flex-column">
              <%= link_to "Mostrar Usuario", user, class: "btn btn-secondary m-1" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
