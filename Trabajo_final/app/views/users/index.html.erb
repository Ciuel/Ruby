<h1 class="text-center m-4">Usuarios</h1>
<div class="d-flex justify-content-center">
  <div>
    <% if can? :create, User %>
      <%= link_to "Crear Usuario", new_user_path, class: "btn btn-secondary m-1" %>
    <% end %>
  </div>
</div>
<div class="d-flex justify-content-center">
  <div id="users" class="d-flex flex-column m-4" style="width: 50rem">
    <% @users.each do |user| %>
      <div class="card mb-3 bg-danger ">
        <div class="row no-gutters">
          <div class="col-md-8">
            <div class="card-body">
              <%= render user %>
            </div>
          </div>
          <div class="col-md-4 d-flex align-items-center justify-content-center">
            <div class="d-flex flex-column">
              <% if !user.admin? %>
                <% if can? :edit, User %>
                  <%= link_to "Edit this user", edit_user_path(user), class: "btn btn-secondary m-1" %>
                <% end %>
                <% if can? :destroy, User %>
                  <%= button_to "Destroy this user", user, method: :delete, class: "btn btn-secondary m-1" %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
