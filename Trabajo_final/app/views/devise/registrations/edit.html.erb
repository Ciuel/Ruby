

<div class="d-flex flex-column">
  <h1 class="text-center m-4">Mi Perfil</h1>
  <div class="d-flex justify-content-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="card bg-danger " style="width: 50rem">
      <div class="row g-0">
        <div class="col-md-7">
          <div class="card-body d-flex flex-column ">

            <strong>Email</strong><br>
            <%= current_user.email %>
            <strong>Rol</strong><br>
            <%= current_user.role_to_s %>
            <% if current_user.branch %>
              <strong>Sucursal</strong><br>
              <%= current_user.branch %>
            <% end %>
          </div>
        </div>
        <div class="col-md-5">
          <div class="card-body">


              <div class="field">
                <%= f.label :contraseña %> <i>(Dejar en blanco si no hay cambios)</i><br/>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                <% if @minimum_password_length %>
                  <em><%= @minimum_password_length %> caracteres como mínimo</em>
                <% end %>
              </div>

              <div class="field">
                <br/>
                <%= f.label :confirmar_contraseña %><br/>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="field">
                <%= f.label :contraseña_actual %> <br/>
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
              </div>

              </div>
              </div>
              <div class="card bg-danger ">
                <div class="list-group list-group-flush d-flex flex-row">
                  <div class="col-md-7">
                    <%= link_to "Volver", :back, class: "list-group-item bg-danger", style: "text-align:center" %>
                  </div>

                  <%= f.submit "Confirmar", class: "list-group-item bg-danger", style: "margin-left:6rem" %>

            <% end %>
            </div>
            </div>
            </div>
    </div>
  </div>
</div>