<h1 class="text-center">Olvidaste tu contraseÃ±a?</h1>

<div class="d-flex flex-column">
  <div class="d-flex justify-content-center">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="card bg-danger " style="width: 30rem">
        <div class="row g-0">
          <div class="card-body">
            <div class="field">
              <%= f.label :email %><br/>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
          <div class="card bg-danger ">
            <div class="list-group list-group-flush d-flex flex-row">
              <div class="col-md-3">
                <%= link_to "Volver", new_user_session_path, class: "list-group-item bg-danger", style: "text-align:center" %>
              </div>

              <%= f.submit "Enviar mail de confirmacion", class: "list-group-item bg-danger", style: "margin-left:3rem" %>

            </div>
          </div>
        </div>
      </div>

    <% end %>

  </div>
</div>