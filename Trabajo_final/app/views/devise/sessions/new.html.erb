<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <section>
    <div class="container-fluid h-custom">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-9 col-lg-6 col-xl-5">
          <%= image_tag "RubyBank.webp", class: "img-fluid" %>
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
          <h1 style="margin-bottom: 10rem" class="text-light text-center m-4">Iniciar Sesión</h1>
          <% if alert %>
            <ul class="list-unstyled">
              <li class="alert alert-warning"><%= alert %></li>
            </ul>
          <% end %>
          <% if notice %>
            <ul class="list-unstyled">
              <li class="alert alert-info"><%= notice %></li>
            </ul>
          <% end %>
          <form>
            <div class="form-outline mb-3">
              <%= f.label :email, class: "form-label text-light" %>
              <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg", autocomplete: "email", placeholder: "Enter a valid email address" %>
            </div>

            <div class="form-outline mb-3">
              <%= f.label :contraseña, class: "form-label text-light" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Enter password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check d-flex mb-3">
                <div class="form-check form-check-inline">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, class: "form-check-label text-light" %>
                </div>
              </div>
            <% end %>

            <div class="d-flex justify-content-between">
              <div class="text-center m-4 text-lg-start  pt-2">
                <%= f.submit "Login", type: "submit", class: "btn btn-primary btn-lg" %>
              </div>
              <div>
                <%= render "devise/shared/links" %>
              </div>
            </div>


          </form>
        </div>
      </div>
    </div>


  </section>

<% end %>

